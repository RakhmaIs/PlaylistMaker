<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainActButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_pad</item>
        <item name="iconTint">@color/black</item>
        <item name="android:layout_marginStart">@dimen/asset_button</item>
        <item name="android:layout_marginEnd">@dimen/asset_button</item>
        <item name ="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textFontWeight">500</item>

    </style>
    
    <style name="SettingsActButtonStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_marginTop">@dimen/settings_button_margin_top</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/white</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/settings_button_textSize</item>
        <item name="textAllCaps">false</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">@color/gray_light</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:background">@color/transparent</item>

    </style>

    <style name="TopTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/margin_start_textview</item>
        <item name="android:layout_marginTop">@dimen/margin_top_textview</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="icon">@drawable/back_arrow</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="BackArrowButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">@dimen/back_arrow</item>
        <item name="android:layout_height">@dimen/back_arrow</item>
        <item name="android:gravity">start</item>
        <item name="backgroundTint">@color/white</item>
        <item name="icon">@drawable/back_arrow</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="android:background">@color/transparent</item>
    </style>



</resources>