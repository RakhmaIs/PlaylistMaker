<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="52dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/ys_display"
            android:text="@string/setting_sec_act"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:icon="@drawable/back_arrow"
            app:iconTint="@color/black"

            />

        <Button
            android:id="@+id/back_arrow"
            android:layout_width="@dimen/back_arrow"
            android:layout_height="@dimen/back_arrow"
            android:layout_gravity="start"
            android:background="#00ffffff"
            android:backgroundTint="@color/white"
            app:icon="@drawable/back_arrow"
            app:iconGravity="textStart"
            app:iconTint="@color/black" />
    </FrameLayout>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/black_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="@dimen/asset_button"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="@dimen/icon_pad"
        android:fontFamily="@font/ys_display"
        android:gravity="start|center_vertical"
        android:text="@string/switch_to_black"
        android:textSize="16sp"


        >

    </androidx.appcompat.widget.SwitchCompat>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/settings_button_margin_top"
        android:background="#00ffffff"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/ys_display"
        android:gravity="start|center_vertical"
        android:text="@string/share_app"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/settings_button_textSize"
        app:icon="@drawable/share"
        app:iconGravity="end"
        app:iconTint="@color/gray" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/settings_button_margin_top"
        android:background="#00ffffff"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/ys_display"
        android:gravity="start|center_vertical"
        android:text="@string/support"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/settings_button_textSize"
        app:icon="@drawable/support"
        app:iconGravity="end"
        app:iconTint="@color/gray" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/settings_button_margin_top"
        android:background="#00ffffff"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/ys_display"
        android:gravity="start|center_vertical"
        android:text="@string/term_of_use"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/settings_button_textSize"
        app:icon="@drawable/arrow"
        app:iconGravity="end"
        app:iconTint="@color/gray" />
</LinearLayout>