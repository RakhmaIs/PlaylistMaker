<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Base.Theme.PlaylistMaker">


    <androidx.appcompat.widget.Toolbar
        style="@style/ToolBarWithoutIconStyle"
        app:title="@string/playlist_maker"
        app:titleTextColor="@color/white"
        />

    <Button
        android:id="@+id/search_button"
        style="@style/MainActButtonStyle"
        android:layout_marginTop="@dimen/settings_button_margin_top"
        android:text="@string/search"
        app:icon="@drawable/search" />

    <Button
        android:id="@+id/media_button"
        style="@style/MainActButtonStyle"
        android:text="@string/media"
        app:icon="@drawable/media" />

    <Button
        android:id="@+id/settings_button"
        style="@style/MainActButtonStyle"
        android:layout_marginBottom="28dp"
        android:text="@string/settings"
        app:icon="@drawable/settings" />

</LinearLayout>

