<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SearchActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/search_lay_textview"
            style="@style/DayNightTopTextViewStyle"
            android:text="@string/search" />

        <Button
            android:id="@+id/search_lay_back_arrow"
            style="@style/DayNightBackArrowButtonStyle" />
    </FrameLayout>

    <FrameLayout
        style="@style/DayNightFrameLaySearchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/search_field"
        android:backgroundTint="@color/gray_light">


        <ImageView
            android:id="@+id/search_lay_magnifying_glass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15.12dp"
            android:src="@drawable/search_icon"
            style="@style/DayNightMagnifyingGlassImageView"
            />

        <EditText
            android:id="@+id/search_lay_search_bar_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="36dp"
            android:backgroundTint="@color/transparent"
            android:hint="@string/search"
            android:textColorHint="@color/black"
            android:inputType="text"
            android:lines="1"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/search_lay_clear_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:visibility="gone"

            />


    </FrameLayout>


</LinearLayout>